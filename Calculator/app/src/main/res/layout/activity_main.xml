<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#5a6897"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/zeroBtn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="68dp"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/numOneBtn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="136dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/numTwoBtn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="136dp"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/numThreeBtn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="132dp"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/numFourBtn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="204dp"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/numFiveBtn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/numSixBtn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/numSevenBtn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="272dp"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/numEightBtn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="272dp"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/numNineBtn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="272dp"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/rightParBtn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:text=")"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/leftParBtn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="("
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/dotBtn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="68dp"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/positiveNegativeBtn2"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="68dp"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp"
        android:text="+/-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/clearBtn"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:layout_marginBottom="284dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="CLEAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/divideBtn"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/numSixBtn"
        app:layout_constraintTop_toBottomOf="@+id/clearBtn" />

    <Button
        android:id="@+id/timesBtn"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:layout_marginBottom="172dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/minusBtn"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:layout_marginBottom="116dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/plusBtn"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/equalsBtn"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/resultEditText"
        android:layout_width="361dp"
        android:layout_height="177dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="#8198A6"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/numEightBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>